<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <Spinner
        android:id="@+id/spinnerIller"
        android:layout_width="253dp"
        android:layout_height="41dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="27dp" />

    <Spinner
        android:id="@+id/spinnerIlceler"
        android:layout_width="253dp"
        android:layout_height="41dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/spinnerIller"
        android:layout_marginStart="1dp"
        android:layout_marginTop="38dp" />

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="92dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:id="@+id/rltMain_Page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="Restoranları Listele"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="122dp"
        android:layout_marginTop="93dp"
        android:gravity="center"
        android:text="İller"
        android:textColor="@color/colorWhite"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerIller"
        android:layout_alignStart="@+id/textView"
        android:layout_marginStart="3dp"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:text="İlçeler"
        android:textColor="@color/colorWhite"
        android:textSize="25sp" />
</RelativeLayout>